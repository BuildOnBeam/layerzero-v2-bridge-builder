-include .env

###########################################################
############# 		BRIDGE TOKENS				###########
###########################################################

run-bridge-token:
	@forge script $(BRIDGE_SCRIPT_PATH) \
		--rpc-url $(RPC_URL) \
		--broadcast \
		--account ${ACCOUNT_NAME} \
		--password $(ACCOUNT_PWD) \
		--sig "$(BRIDGE_TOKEN_SIG)"  $(CHAIN_ID) $(CONTRACT) \
		-vvvvvvv --legacy 
	
